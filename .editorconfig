# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
indent_size = 4
indent_style = space

# Set default charset
charset = utf-8


[lib/**.js]
indent_style = tab

# Matches the exact files .travis.yml
[{.travis.yml}]
indent_style = space
indent_size = 2
